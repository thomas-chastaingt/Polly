{% extends 'base.html.twig' %}


{% block body %}
{% for user in users %}
    <td>
        <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
    </td>
<div class="polls-view">
    <div class="item">
        <div class="item__title">
            <p class="item__title__name label">{{ user.email }}</p>
            <p class="item__title__author footnote terciary">{{ user.id }}</p>
        </div>
        <div class="item__actions">
        <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <a href="{{ path('user_edit', {'id': user.id}) }}"><div class="material-icons-round terciary action">
                visibility
            </div></a>
        </form>
            <a href="{{ path('user_delete', {'id': user.id}) }}"><span class="material-icons-round terciary action">
                delete_forever
            </span></a>
        </div>
    </div>
</div>
{% else %}
<p>no records found</p>
{% endfor %}
{% endblock %} 

