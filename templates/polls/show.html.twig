{% extends 'base.html.twig' %}

{% block title %}Polls{% endblock %}

{% block body %}
    <h1>Polls</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ poll.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ poll.title }}</td>
            </tr>
            <tr>
                <th>Hide</th>
                <td>{{ poll.hide ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ poll.dateCreation ? poll.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('polls_index') }}">back to list</a>

    <a href="{{ path('polls_edit', {'id': poll.id}) }}">edit</a>

    {{ include('polls/_delete_form.html.twig') }}
{% endblock %}
