{% extends 'base.html.twig' %}

{% block title %}Polls{% endblock %}

{% block body %}
<div style="display: flex; justify-content: center;">
    <h1>Delete poll</h1>
</div>
<div
    style="display: flex; flex-direction: column; width: 360px; padding: 24px; background-color: white; margin: auto; margin-top: 20px; border-radius: 12px; box-shadow: 0 6px 60px 0 rgba(0, 0, 0, 0.15);">
    <div>
        Id: {{ poll.id }}
    </div>
    <div>
        Title: {{ poll.title }}
    </div>
    <div>
        Date: {{ poll.dateCreation ? poll.dateCreation|date('Y-m-d H:i:s') : '' }}
    </div>
    {{ include('polls/_delete_form.html.twig') }}
</div>



{% endblock %}